  internal class person
  {
      private int age;
      private string name;

      public int Age
      {
          get { return age; }
          set
          {
              if (age < 0 || age > 120) { Console.WriteLine("ошибка"); }
              else { age = value; }
          }
      }
      public string Name
      {
          get { return name; }
          set {name = value; }
      }
      public person (int age, string name)
      {
          Age = age;
          Name = name;
      }
      public void SayHello()
      {
          Console.WriteLine($"привет, я {name}, мне {age} лет");
      }
  }



 internal class Program
 {
     static void Main(string[] args)
     {
         person PersonObject = new person(25, "маша");
         PersonObject.Name = "Маша";
         PersonObject.Age = 25;
         PersonObject.SayHello();
     }
 }
